<nav class="sidebar sidebar-offcanvas" id="sidebar">
    <div class="sidebar-brand-wrapper d-none d-lg-flex align-items-center justify-content-center fixed-top">
        <a class="sidebar-brand brand-logo" href="{{ path('home') }}"><img src="{{ image('logo.svg') }}" alt="logo" /></a>
        <a class="sidebar-brand brand-logo-mini" href="{{ path('home') }}"><img src="{{ image('logo-mini.svg') }}" alt="logo" /></a>
    </div>
    <ul class="nav">

        {% include '@common/Side/Profile.twig' %}

        <li class="nav-item nav-category">
            <span class="nav-link">Navigation</span>
        </li>
        {% for menuItem in menuLeft %}
        <li class="nav-item menu-items">
            {% if menuItem.hasSubmenu() %}
            <a class="nav-link" data-toggle="collapse" href="#{{ menuItem.getUri() }}" aria-expanded="false" aria-controls="{{ menuItem.getUri() }}">
                <span class="menu-icon"><i class="{{ menuItem.getIcon() }}"></i></span>
                <span class="menu-title">{{ menuItem.getName() }}</span>
                <i class="menu-arrow"></i>
            </a>
            <div class="collapse" id="{{ menuItem.getUri() }}">
                <ul class="nav flex-column sub-menu">
                {% for subMenuItem in menuItem.getSubmenu() %}
                    <li class="nav-item"> <a class="nav-link" href="{{ subMenuItem.getUri() }}">{{ subMenuItem.getName() }}</a></li>
                {% endfor %}
                </ul>
            </div>
            {% else %}
            <a class="nav-link" href="{{ menuItem.getUri() }}">
                <span class="menu-icon"><i class="{{ menuItem.getIcon() }}"></i></span>
                <span class="menu-title">{{ menuItem.getName() }}</span>
            </a>
            {% endif %}
        </li>
        {% endfor %}
    </ul>
</nav>